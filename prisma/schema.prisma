generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique()
  password  String
  gender    Gender
  birthDate DateTime
}

model File {
  id        String   @id @default(uuid())
  key       String
  name      String
  createdAt DateTime @default(now())
}

enum Gender {
  MALE
  FEMALE
  NON_BINARY @map("NON-BINARY")
}
