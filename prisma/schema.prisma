generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique()
  password  String
  gender    Gender
  birthDate DateTime
  podcast   Podcast?
}

model File {
  id        String   @id @default(uuid())
  key       String
  name      String
  createdAt DateTime @default(now())
  Episode   Episode?
}

model Podcast {
  id          String    @id @default(uuid())
  name        String
  description String
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id])
  userId      String    @unique
  episodes    Episode[]
}

model Episode {
  id          String   @id @default(uuid())
  title       String
  description String
  createdAt   DateTime @default(now())
  podcast     Podcast  @relation(fields: [podcastId], references: [id])
  podcastId   String   @unique
  file        File     @relation(fields: [fileId], references: [id])
  fileId      String   @unique
}

enum Gender {
  MALE
  FEMALE
  NON_BINARY @map("NON-BINARY")
}
